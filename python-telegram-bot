import requests
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, MessageHandler, filters, ContextTypes

API_URL = "https://api.ytdlp.online/api/json"

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text("Send me a video link and I'll fetch it for you ğŸ¬")

async def handle_message(update: Update, context: ContextTypes.DEFAULT_TYPE):
    url = update.message.text.strip()
    await update.message.reply_text("Processing your link... ğŸ”„")

    try:
        response = requests.post(API_URL, json={"url": url})
        data = response.json()

        if "url" in data:
            await update.message.reply_text(f"âœ… Here's your download link:\n{data['url']}")
        else:
            await update.message.reply_text("âš ï¸ Couldnâ€™t fetch the video. Check the link or try again later.")

    except Exception as e:
        await update.message.reply_text(f"âŒ Error: {e}")

def main():
    app = ApplicationBuilder().token("YOUR_TELEGRAM_BOT_TOKEN").build()
    app.add_handler(CommandHandler("start", start))
    app.add_handler(MessageHandler(filters.TEXT & ~filters.COMMAND, handle_message))
    app.run_polling()

if __name__ == "__main__":
    main()
